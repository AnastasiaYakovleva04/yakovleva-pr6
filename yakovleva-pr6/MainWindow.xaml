<Window x:Class="yakovleva_pr6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yakovleva_pr6"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <DockPanel LastChildFill="False">
        <StackPanel Orientation="Horizontal"  DockPanel.Dock="Top" Background="SkyBlue">
            <Button Content="Главная" Width="175" Height="30" Margin="5"></Button>
            <Button Content="Профиль" Width="175" Height="30" Margin="5"></Button>
            <Button Content="Настройки" Width="175" Height="30" Margin="5"></Button>
            <Button Content="Помощь" Width="175" Height="30" Margin="5"></Button>
        </StackPanel>
        <Grid Height="300" Width="730" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" BorderBrush="Black" BorderThickness="1" Margin="10">
                <Button Content="Загрузить фото" Height="25" Margin="10" VerticalAlignment="Bottom"/>
            </Border>
            
            <Label Content="ФИО:" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Email:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Телефон:" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Дата рождления:" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Пол:" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Пароль:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <TextBox Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350" Height="25"/>
            <TextBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350" Height="25"/>
            <TextBox Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350" Height="25"/>
            <DatePicker Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350" Height="25"/>
            <StackPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <RadioButton Margin="5">Мужской</RadioButton>
                <RadioButton Margin="5">Женский</RadioButton>
            </StackPanel>
            <TextBox Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350" Height="25"/>
            
            <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Content="Подтверждение пароля:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Width="335" Height="25"/>
            </StackPanel>
        </Grid>

        <WrapPanel Background="LightGray" Width="700" Height="200" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Label Content="* Пароль должен содержать минимум 8 символов." Margin="10"/>
            <Label Content="* Все поля обязательны." Margin="10"/>
            <Label Content="* Email должен быть в формате name@mail.com." Margin="10"/>
        </WrapPanel>
        <StatusBar DockPanel.Dock="Bottom" Background="LightGray" Height="30" Width="800">
            <Label Content="Готово"/>
        </StatusBar>

        <StackPanel Height="40" Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,10,15,15">
            <Button Content="Зарегистрироваться" Margin="5" Width="150"/>
            <Button Content="Отмена" Margin="5" Width="100"/>
        </StackPanel>

    </DockPanel>
</Window>
